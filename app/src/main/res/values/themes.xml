<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyPrio" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/active_LM</item>
        <item name="colorPrimaryVariant">@color/disabled_LM</item>
        <item name="colorOnPrimary">@color/background_LM</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_purple</item>
        <item name="colorSecondaryVariant">@color/disabled_disclaimer_text_LM</item>
        <item name="colorOnSecondary">@color/background_LM</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="activeViewBackground">@color/active_LM</item>
        <item name="disabledViewBackground">@color/disabled_LM</item>
        <item name="activityBackground">@color/background_LM</item>

        <item name="mainText">@color/main_text_LM</item>
        <item name="disabledMainText">@color/disabled_main_text_LM</item>
        <item name="subText">@color/disclaimer_text_LM</item>
        <item name="disabledSubText">@color/disabled_disclaimer_text_LM</item>

        <item name="activeButtonColor">@color/brand_purple</item>
        <item name="disabledButtonColor">@color/sub_button_background</item>

        <item name="priority_0_icon">@drawable/ic_prio_0_lm</item>
    </style>

    <style name="Theme.MyPrio.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyPrio.Toolbar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/brand_purple</item>
        <item name="popupTheme">@style/Theme.MyPrio.PopupOverlay</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="Theme.MyPrio.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:titleTextColor" tools:targetApi="m">@android:color/white</item>
    </style>

    <style name="MainButton">
        <item name="android:backgroundTint">@color/brand_purple</item>
        <item name="android:textColor">@color/main_text_DM</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.3</item>
    </style>

    <style name="SubButton">
        <item name="android:backgroundTint">@color/sub_button_background</item>
        <item name="android:textColor">@color/main_text_DM</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.3</item>
    </style>

</resources>